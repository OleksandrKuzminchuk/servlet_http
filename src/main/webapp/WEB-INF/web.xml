<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.sasha.servletapi.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/api/users/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.sasha.servletapi.controller.EventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/api/events/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FileController</servlet-name>
        <servlet-class>com.sasha.servletapi.controller.FileController</servlet-class>
        <multipart-config>
            <location>C:\temporaryStorage</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileController</servlet-name>
        <url-pattern>/api/files/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.sasha.servletapi.util.Listener</listener-class>
    </listener>
</web-app>
